/* miniprogram/components/warn/warn.wxss */
.dark{
  width: 750rpx;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 100;
  background-color: #000;
  opacity: 0.65;
}
.warn-wrap{
  width: 540rpx;
  height: 540rpx;
  border-radius: 30rpx; 
  background-color: #E8E8E8;
  position: fixed;
  display: flex;
  align-items: center;
  flex-direction: column;
  z-index: 101;
  top: 50%;
  left: 50%;
  margin-left: -270rpx;
  margin-top: -340rpx;
  box-shadow: #000000 0 3rpx 6rpx;
  opacity: 1;
}
.warn{
  font-size: 80rpx;
  color: #808080;
  margin: 100rpx auto 60rpx auto;
}
.content{
  font-size: 28rpx;
  color: #808080;
  width: 70%;
  text-align: center;
  margin-bottom: 80rpx;
}
.warn-wrap button{
  background-color: #414141;
  width: 342rpx;
  height: 66rpx;
  font-size: 26rpx;
  color:#E8E8E8;
  border-radius: 34rpx;
  /* box-shadow: #414141 0 6rpx 12rpx; */
}
.close-img{
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  z-index: 102;
  left: 50%;
  margin-left: -30rpx;
  top: 50%;
  margin-top: 300rpx;
}
.hide{
  display: none;
}
.show{
  display: flex;
}