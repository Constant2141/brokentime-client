/**font-content**/
.font-time{
  display: inline-flex;
  font-size: 32rpx;
  justify-content: center;
  align-items: center;
  height: 140rpx;
  width: 40%;
}
.content-wrap{
  display: inline-flex;
  width: 100%;
  height: 140rpx;
}
.font-wrap{
  display: flex;
  height: 140rpx;
  width: 60%;
}
.font-wrap view{
  width: 100%;
  text-align: center;
}
.twoLine{
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  font-size: 24rpx;
}
.oneLine{
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.finish1{
  color: #fff;
}
.no-finish1{
  color: #707070;
}
.slider{
  width: 85%;
  margin: 0 auto;
  margin-left: 10%;
  margin-top: -20rpx;
}