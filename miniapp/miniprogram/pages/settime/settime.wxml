<view class='container'>
  <view class='edit' style='background:url(../../images/write.png);background-repeat:no-repeat;'>
  </view>
  <view wx:for="{{bigDeal}}" wx:key="{{index}}">
    <view class='date'>
      <view class='day'>{{item.day}}</view>
      <view class='week'>{{item.week}}</view>
    </view>
    <view class='time-line'>
      <timeline wx:for="{{item.timeline}}" wx:key="{{index}}" timeline="{{item.timeline[index]}}"></timeline>
    </view>
  </view>
  
  <view class='button-wrap'>
    <view class='next-button'>next</view>
  </view>
</view>
